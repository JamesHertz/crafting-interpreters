
class Player {
    init(name){
        this.name   = name;
        this.points = 0;
    }

    addPoints(points){
        this.points += points;
    }

    speak(){
        print "Hi! I am player '" + this.name + "' and I have " + this.points + " points!";
    }
}

var p = Player("James");
p.addPoints(100);
p.speak();
